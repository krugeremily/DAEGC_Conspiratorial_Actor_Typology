
# filter for search term in each line, print entire line ($0)
awk '/searchterm/{print $0} file

#find and show tweets with all of the search terms (in the first 5 million tweets
head -n 5000000 textfile | awk '/miss/ && /home/ && /lockdown/{print} textfile' 

#if all fields $0 (only text in file) contains one of the search terms, print 1, otherwise 0
awk '{if ($0 ~ /word1|term2|term3|term4/) {print "1"} else {print "0"}}' tweet_text > outputfile


